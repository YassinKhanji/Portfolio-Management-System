# Portfolio Management System - Environment Configuration
# ======================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
#
# Required variables are marked with [REQUIRED]
# All secrets should be cryptographically strong random values

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# ============================================================================
# Database Configuration (Neon PostgreSQL) [REQUIRED]
# ============================================================================
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/portfolio

# ============================================================================
# Authentication & JWT [REQUIRED]
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-secret-key-change-in-production

# Optional admin email for notifications
ADMIN_EMAIL=

# ============================================================================
# CORS Configuration [REQUIRED for production]
# ============================================================================
# Accepts: JSON array '["url1","url2"]', comma-separated 'url1,url2', or single URL
# Example: https://your-frontend.vercel.app
CORS_ORIGINS=http://localhost:5173

# ============================================================================
# Encryption Configuration [REQUIRED for production]
# ============================================================================
# 64-character hex string for encrypting sensitive data (SnapTrade secrets)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_DIR=logs

# ============================================================================
# SnapTrade Integration [REQUIRED]
# ============================================================================
# Get these from SnapTrade developer portal
SNAPTRADE_CLIENT_ID=
SNAPTRADE_CLIENT_SECRET=

# Set to False for production
SNAPTRADE_SANDBOX=True

# OAuth callback URL - must match your registered redirect URI
# Example: https://your-api.railway.app/api/auth/snaptrade/callback
SNAPTRADE_REDIRECT_URI=

# ============================================================================
# Email Configuration (Optional - for notifications)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=

# ============================================================================
# Currency Configuration
# ============================================================================
DEFAULT_CURRENCY=CAD
EXCHANGE_RATE_API_KEY=

# ============================================================================
# Rate Limiting (requests per minute)
# ============================================================================
# RATE_LIMIT_LOGIN=5
# RATE_LIMIT_REGISTER=3
# RATE_LIMIT_TRADES=30
# RATE_LIMIT_DEFAULT=60
